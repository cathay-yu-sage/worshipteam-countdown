<Window x:Class="Ecclesiastes3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ecclesiastes 3 Control Panel" Height="350" Width="525" MinHeight="350" MinWidth="525">
    <Grid>
        <Viewbox HorizontalAlignment="Left" Height="auto" Margin="10,10,10,190" VerticalAlignment="Top" Width="auto" Stretch="Fill">
            <Label x:Name="PreviewLabel" Content="30:00" Background="Black" Foreground="Yellow" MouseDoubleClick="ToggleClockMode"/>
        </Viewbox>
        <Button Content="Countdown to 10:30am" HorizontalAlignment="Left" Margin="21,0,0,120" VerticalAlignment="Bottom" Width="149" Height="48" Click="Click1030"/>
        <Button Content="5 minutes Countdown" HorizontalAlignment="Right" Margin="0,0,180,120" VerticalAlignment="Bottom" Width="135" Height="48" Click="Click5"/>
        <Button Content="READY" HorizontalAlignment="Right" Margin="0,0,21,120" VerticalAlignment="Bottom" Width="138" Height="48" Click="ClickReady"/>
        <TextBox x:Name="CustomMinutes" HorizontalAlignment="Right" Height="25" Margin="0,0,150,60" TextWrapping="Wrap" Text="15" VerticalAlignment="Bottom" Width="27" RenderTransformOrigin="0.963,-0.04" />
        <Button Content="minutes Countdown" HorizontalAlignment="Right" Margin="0,0,21,50" VerticalAlignment="Bottom" Width="115" Height="48" Click="CustomClick"/>
        <Label x:Name="CurrentTimeLabel" Content="Current Time" HorizontalAlignment="Right" Margin="0,0,21,13" VerticalAlignment="Bottom" Width="263" Height="24" HorizontalContentAlignment="Right" VerticalContentAlignment="Center"/>
        <Image Margin="21,210,182,13" Source="Image2.png" Stretch="Fill" Opacity="0.4" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="290" Height="100"/>
    </Grid>
</Window>
